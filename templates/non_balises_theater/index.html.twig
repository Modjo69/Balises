{% extends 'base_admin.html.twig' %}
{% block title %}NonBalisesTheater index{% endblock %}

{% block body %}


<div class="card  container p-0 w-100">
    <div class="card-header d-flex w-100 justify-content-between">
        <h5 class="my-0 mx-2 py-2" >Liste des Théâtres</h5>
        <a href="{{ path('non_balises_theater_new') }}" class="btn btn-info text-white"><b>+</b>Ajouter</a>
    </div>
    <div class="card-body p-0">
        <table class="table table_user table-striped">
            <thead>
                <tr>
                    <th style="width:300px;" >
                        Théâtre
                    </th>
                    
                    <th class="th_action text-center">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for non_balises_theater in non_balises_theaters | sort | reverse %}
                <tr class="tr_index bg-white ">
                    <td class="td_name">{{ non_balises_theater.name }}</td>
                    <td class="text-center btn_crud_index">

                        <a type="button" class="btn  btn-info btn-xs" data-toggle="tooltip" title="Détail" 
                                            href="{{ path('non_balises_theater_show', {'id': non_balises_theater.id}) }}"><i class="far fa-eye"></i></a>

                        <a type="button" class='btn btn-info btn-xs' data-toggle="tooltip" title="Edition" 
                                            href="{{ path('non_balises_theater_edit', {'id': non_balises_theater.id}) }}"><i class="fas fa-edit"></i></a>

                        {{ include('non_balises_theater/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
