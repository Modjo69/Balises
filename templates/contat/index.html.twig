{% extends 'basePage.html.twig' %}

{% block title %}Contactez Balises{% endblock %}

{% block body %}
	
	<div class="container bg-custom" style="height:100vh;">
	    <h1 class="h1 text-center">Contactez Balises</h1>
		    <div class="mt-5 text-center">
		        {{ form_start(email_form) }}
		        <div class="row mt-5">
		        	<div class="col-1 mb-5"></div>
			        {{ form_widget(email_form.Votre_Nom, {'attr': {'class': 'col-3','placeholder': 'Votre Nom'}}) }}
			        <div class="col-1"></div>
			        {{ form_widget(email_form.Votre_Email, {'attr': {'class': 'col-6','placeholder': 'Votre Email'}}) }}
			    </div>
			    <div class="row mt-5">
				    <div class="col-1"></div>
			        {{ form_widget(email_form.Votre_Message, {'attr': {'class': 'col-10','placeholder': 'Votre Message', 'rows': 7}}) }}
			    </div>

                <input type="submit" value="Send" class="btn btn-warning mt-5 mb-5"/>

		        {{ form_end(email_form) }}

		    </div>
	</div>
{% endblock %}