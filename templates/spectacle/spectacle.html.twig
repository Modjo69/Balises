{% extends 'basePage.html.twig' %}
{% block title %}{{ spectacle.title }}{% endblock %}

{% block body %}
    <div class="container bg-black h-100 spectacleContainer" xmlns="http://www.w3.org/1999/html">



        <div class="row m-auto justify-content-between">
            <i class="fas fa-times fa-3x closeX" id="closeSpectacle"
               onclick="closeSpectacleWindow()"></i>
        </div>

        <div class="row m-auto justify-content-between">
            <div class="col-6 p-4">
                <h1 class="h1">{{ spectacle.title }}</h1>
            </div>
            <div class="col-6 col-md-6">
                <img src="{{ spectacle.image }}">
            </div>
        </div>

        <div class="row m-auto justify-content-between">
            <div class="col-12 col-md-6">

                <h2 class="h2">Représentations</h2>

                {% for seance in showDate %}

                    <p class="description">{{ seance.dateShow | date('d.m.Y à H:i') }}</p>

                {% endfor %}

                <div class="pb-4 pt-2" id="plus-button">
                    <h4 class="h4 hvr-float-shadow" style="opacity: 0.8; cursor: pointer;"
                        onclick="moreDates('{{ path
                            ('moreSpectacle', {"id": spectacle.id}) }}')">
                        <i class="fas fa-plus"></i> plus de dates </h4>
                </div>
                <div id="moreDates" class="row p-2"></div>

            </div>

            <div class="col-12 col-md-6 m-auto p-4">
                <a href="https://54yzsyel.mapado.com/en/">
                    <button class="calendarButton hvr-float-shadow py-2 px-4">commander</button></a>
            </div>

        </div>



    <div class="row m-auto justify-content-between">
        <div class="col-12">
            <h2 class="h2">Description :</h2>
            <p class="description">{{ spectacle.description }}</p>
        </div>

        <div class="col-12">
            <h2 class="h2">Distribution :</h2>
            <p class="description">{{ spectacle.distribution }}</p>
        </div>

    </div>
    <div class="row m-auto justify-content-between">

    </div>
    <div class="row p-1">

    </div>
    {% if spectacle.mandatoryInfos != '' %}
        <div class="row p-4">
            <div class="col-12">
                <h2 class="h2">Information complémentaire :</h2>
                <p>{{ spectacle.mandatoryInfos }}</p>
            </div>
        </div>
    {% endif %}
    <div class="row justify-content-end p-4">
        <div class="col-3">
            <i class="fas fa-times fa-3x closeX" style="color: white" id="closeSpectacle"
               onclick="closeSpectacleWindow()"></i>
        </div>
    </div>
    </div>

</div>
{% endblock %}


{% block javascripts %}

    <script>
        //Cette fonction gère l'affichage des spectacles quand on clique dans le calendrier carousel




    </script>

{% endblock %}

