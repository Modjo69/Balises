        {% if user.roles[0] == "ROLE_ADMIN" %}
            <div class="mt-3">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div> -->

{% if form_errors(form) != '' %}
    {{ form_errors(form) }}
{% endif %}

    {{ form_end(form) }}

