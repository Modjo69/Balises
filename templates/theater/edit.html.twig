{% extends 'base_admin.html.twig' %}

{% block title %}Modification Théâtre{% endblock %}

{% block body %}
    <style>
        .sidenav {
            display: none;
        }
    </style>

    <h1>Modification d'un Théâtre</h1>

    {{ include('theater/_form.html.twig', {'button_label': 'Mise à Jour'}) }}

    <div class="row justify-content-sm-end">
        {% if user.roles[0] == "ROLE_ADMIN" %}
            <div class="col-sm-4">
                {{ include('theater/_delete_form.html.twig') }}
            </div>
            <div class="col-sm-4">

                <a href="{{ path('user_index',{'variable' : user.id} )}}"><button class="btn btn-secondary btn-sm">Retour Liste des Théâtres</button> </a>
            </div>
        {% endif %}
    </div>



{% endblock %}
