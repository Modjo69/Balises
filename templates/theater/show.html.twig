{% extends is_granted('ROLE_ADMIN')
    ? 'base_admin.html.twig'
    : 'basePage.html.twig' %}

{% block title %}Theater{% endblock %}

{% block body %}

    <div class="card card-edit-new w-100 container p-0">
        <div class="card-header d-flex w-100 justify-content-center">
            <h1>{{ theater.name }}</h1>
        </div>
        <div class="row positionLogo">
            <div class="col-sm-6">
                <img class="img_logo img-thumbnail" src="{{ asset('uploads/' ~ theater.logo) }}"></img>
            </div>
            <div class="col-sm-6">
                {% if is_granted('ROLE_ADMIN') %}
                    <img class="img_logo img-thumbnail" src="{{ asset('uploads/' ~ theater.picture) }}"
                         width="400"></img>
                {% else  %}
                    <img class="img_logo img-thumbnail" src="{{ asset('uploads/' ~ theater.picture) }}"></img>
                {% endif %}
            </div>
        </div>

            <table class="table">
                <tbody>
                {#
                <tr>
                    <th>Id</th>
                    <td>{{ theater.id }}</td>
                </tr>

                <tr>
                    <th>Nom</th>
                    <td>{{ theater.name }}</td>
                </tr>
                 #}
                <tr>
                    <th>Email</th>
                    <td>{{ theater.email }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ theater.address1 }}</td>
                </tr>
                <tr>
                    <th>Complément Adresse</th>
                    <td>{{ theater.address2 }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ theater.zipCode }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ theater.city }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ theater.phoneNumber }}</td>
                </tr>
                {#
                <tr>
                    <th>Logo</th>
                    <td>{{ theater.logo }}</td>

                </tr>#}
                <tr>
                    <th>Web Site</th>
                    <td>{{ theater.website }}</td>
                </tr>
                <tr>
                    <th>Plein Tarif</th>
                    <td>{{ theater.baseRate }}</td>
                </tr>
                <tr>
                    {#  <th>Latitude</th>
                      <td>{{ theater.baseRate }}</td>
                  </tr>
                  <tr>
                      <th>Longitude</th>
                      <td>{{ theater.baseRate }}</td>
                  </tr>#}
                </tbody>
            </table>
            <div class="row justify-content-md-center">
                {% if user.roles[0] == "ROLE_THEATER" %}
                    <div class="col-md-3">
                        <a href="{{ path('spectacle_index') }}">
                            <button class="btn btn-secondary mb-5">Liste Spectacles</button>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('spectacle_new') }}">
                            <button class="btn btn-secondary mb-5">Nouveau Spectacle</button>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('theater_edit', {'id': theater.id}) }}">
                            <button class="btn btn-secondary mb-5">Modification</button>
                        </a>
                    </div>
                {% endif %}
                {% if user.roles[0] == "ROLE_ADMIN" %}

                    <div class="col-md-3">
                        <a href="{{ path('theater_edit', {'id': theater.id}) }}">
                            <button class="btn btn-secondary mb-5">Modification</button>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('user_index') }}">
                            <button class="btn btn-secondary mb-5">Liste Théâtres</button>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
