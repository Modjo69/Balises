{% extends 'base_admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="row  row_user w-100  m-0">
        <table class="table table-striped table_user m-auto">

            <thead class="thead_user">
                    <div class="titre_user d-flex w-100 justify-content-between">
                        <h4 class="my-0 mx-2" >Liste des Théâtres</h4>
                        <a href="{{ path('user_new') }}" class=" btn btn-info  text-white"><b>+</b>Ajouter</a>
                    </div>

                    <tr>
                        <th class="col-md-4" >
                            <a href="/user/index/name/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                            <a href="/user/index/name/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                            Nom du Théâtre
                        </th>
                        <th class="col-md-3">
                            <a href="/user/index/email/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                            <a href="/user/index/email/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                            Email
                        </th>
                        <th class="col-md-3">
                            <a href="/user/index/zipCode/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                            <a href="/user/index/zipCode/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                            Code Postal
                        </th>
                        <th class="text-center col-md-4">Action</th>
                    </tr>
            </thead>

            {% for user in users %}
                <tr>
                    {% if user.roles[0]!="ROLE_ADMIN" %}
                        <td>{{ user.theater.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.theater.zipCode }}</td>
                        <td class="text-center">
                            <a class='btn btn-info btn-xs m-1' href="{{ path('user_show', {'id': user.id}) }}">
                                <span class="glyphicon glyphicon-edit"></span>
                                Show
                            </a>
                            <a class='btn btn-info btn-xs' href="{{ path('user_edit', {'id': user.id}) }}">
                                <span class="glyphicon glyphicon-edit"></span>
                                Edit
                            </a>
                            <a href="#" class="btn btn-danger btn-xs">
                                <span class="glyphicon glyphicon-remove"></span>
                                Del
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}




