{% extends 'base_admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="card w-100">
    <div class="card-header d-flex w-100 justify-content-between">
        <h4 class="my-0 mx-2" >Liste des Théâtres</h4>
        <a href="{{ path('user_new') }}" class="btn btn-info  text-white"><b>+</b>Ajouter</a>
    </div>
    <div class="card-body p-0">
            <table class="table table-striped table-bordered table-hover">
                    <thead class="text-center">
                            <tr >
                                <th class="col-3" >
                                    <a href="/user/index/name/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                                    <a href="/user/index/name/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                                    Théâtre
                                </th>
                                <th class="col-3">
                                    <a href="/user/index/email/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                                    <a href="/user/index/email/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                                    Email
                                </th>
                                <th class="col-3">
                                    <a href="/user/index/zipCode/down"><i class="fa fa-arrow-down text-dark" aria-hidden="true"></i></a>
                                    <a href="/user/index/zipCode/up"><i class="fa fa-arrow-up text-dark" aria-hidden="true"></i></a>
                                    Code Postal
                                </th>
                                <th class="th_action text-center">Action</th>
                            </tr>
                    </thead>

                    {% for user in users %}

                        <tr class="tr_index">
                            {% if user.roles[0]!="ROLE_ADMIN" %}
                                   <td class="text-center">{{ user.theater.name }}</td>
                                   <td class="text-center">{{ user.email }}</td>
                                   <td class="text-center">{{ user.theater.zipCode }}</td>
                                </a>

                                <td class="text-center">
                                    <a class='btn btn-info btn-xs m-1' href="{{ path('theater_show', {'id': user.id}) }}">
                                        <span class="glyphicon glyphicon-edit"></span>
                                        Show
                                    </a>
                                    <a class='btn btn-info btn-xs' href="{{ path('theater_edit', {'id': user.theater.id}) }}">
                                        <span class="glyphicon glyphicon-edit"></span>
                                        Edit
                                    </a>
                                    <a href="{{ path('user_delete', {'id': user.theater.id}) }}" class="btn btn-danger btn-xs">
                                        <span class="glyphicon glyphicon-remove"></span>
                                        Del
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}

                </table>
    </div>{# Card body #}
  </div>{# Card #}
{% endblock %}




