<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="button" data-toggle="tooltip" data-placement="top"  title="Suppression" class="btn btn-danger
    mr-5"><i class="far fa-trash-alt"></i></button>
</form>
