/*********************Fonction chart********************/
    function chartFonct(nbSpectacleMois,len,titre,anneeSelect){
                dataPoints=[];
                for (let i = 0; i < len; i++) {
                
                let nbSpectacle = parseInt(nbSpectacleMois[i].nbSpectacle);
                let mois = parseInt(nbSpectacleMois[i].mois);
                let annee = parseInt(nbSpectacleMois[i].annee);
                
                if(annee == anneeSelect){
                for (let j = 0; j < 12; j++) {            
                    if ((j + 1) == mois) {
                        dataPoints.push({
                            x: new Date(anneeSelect, j),
                            y: nbSpectacle
                        });
                    } 
                    else {
                        dataPoints.push({
                            x: new Date(anneeSelect, j),
                            y: 0
                        });
                    }// else de j
                  }  //fin for j mois
                } //if annee
            }//fin for i mois

            let chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                culture: "fr",
                title: {
                    text: titre,
                    fontColor: "#2f4f4f",
                    fontSize: 20,
                    padding: 15,
                    margin: 15,
                    backgroundColor: "#c2c4c5",
                    fontWeight: "bold",                   
                },
                axisX: {
                    valueFormatString: "MMMM",
                    labelAngle: -50,
                    labelFontSize: 17,                    
                },
                axisY: {                   
                    labelFontSize: 15,                    
                }, 
                data: [{
                        type: "column",                        
                        indexLabel: "{y}",
                        indexLabelPlacement: "inside",  
                        indexLabelOrientation: "horizontal",
                        indexLabelFontSize: 20,
                        dataPoints: dataPoints
                    }]                
            });// chart = new CanvasJS.Chart
            chart.render();           
        }//chartFonct
        
