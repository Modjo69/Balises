{% extends 'base_admin.html.twig' %}

{% block title %}Admin détail Théâtre{% endblock %}

{% block body %}
    <div class="card container p-0  w-100">

        <div class="card-header d-flex w-100 justify-content-between">
            
            <h5 class="my-0 mx-2 py-2" >Détail : <span class="d-inline-block">{{ user.theater.name }}<span/></h5>

            <div class="btn_show_crud">

                <a type="button" href="{{ path('user_index') }}"
                    data-toggle="tooltip" data-placement="top"  title="List" 
                    class="btn btn-info">
                    <i class="far fa-list-alt"></i>
                </a>

                {% if is_granted('ROLE_ADMIN') %}

                    <a type="button" href="{{ path('user_edit', {'id': user.id}) }}"
                        data-toggle="tooltip" data-placement="top"  title="Edition" 
                        class="btn btn-info"> <i class="fas fa-edit"></i>
                    </a>

                    {{ include('user/_delete_form.html.twig') }}                    
                {% endif %}
            </div>
        </div>


        <div class="card-body p-0">
                <table class="table table_show table-striped table-bordered table-hover">
                    <tbody>

                        {% if user.theater.name is  defined %}
                            <tr>
                                <th>Nom du Théâtre</th>
                                <td>{{ user.theater.name }}</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ user.theater.address1 }}</td>
                        </tr>
                        <tr>
                            <th>Complément Adresse</th>
                            <td>{{ user.theater.address2 }}</td>
                        </tr>
                        <tr>
                            <th>Code Postal</th>
                            <td>{{ user.theater.zipCode }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ user.theater.city }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ user.theater.phoneNumber }}</td>
                        </tr>
                        <tr>
                            <th>Logo</th>
                            <td><img src="{{ asset( user.theater.logo ) }}" alt=""> </td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td><img src="{{ asset( user.theater.picture ) }}" alt=""> </td>
                        </tr>
                        <tr>
                            <th>Web Site</th>
                            <td>{{ user.theater.website }}</td>
                        </tr>
                        <tr>
                            <th>Tarif Base</th>
                            <td>{{ user.theater.baseRate }}</td>
                        </tr>
                    </tbody>   
                </table>      
        </div>{# Card body #}
    </div>{# Card #}   
{% endblock %}
