{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {% if user.theaterName is  defined %}
                <tr>
                    <th>Nom du Théâtre</th>
                    <td>{{ user.theaterName }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Password</th>
                <td></td>
            </tr>
        </tbody>
    </table>
    <div class="row justify-content-lg-around">
        <div class="col-lg-3 offset-lg-1">
            <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-dark">Edit</button> </a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-lg-3">
                <a href="{{ path('user_index') }}"><button class="btn btn-dark">List</button></a>
            </div>
            <div class="col-lg-3">
            {{ include('user/_delete_form.html.twig') }}
        </div>
        {% endif %}
    </div>
{% endblock %}
