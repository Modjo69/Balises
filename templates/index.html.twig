{% extends 'base.html.twig' %}


{% block body %}

    <style>

        body
        {
            background-image: url({{ asset('/uploads/Balises_background.png') }});

            background-size: cover;

        }

        .logoIndex, .sidenav, #logoonmap, .LoginBtn
        {

            animation:fadeIn 2s step-end;
        }

        @keyframes fadeIn {
            from {
                opacity:0;
            }
            to {
                opacity:1;
            }
        }


        #IndexTitle
        {
            animation: move 2s;
        }

        @keyframes move {
            from { top: 300px;}
            to { top: 0;}

        }

        #background_opacity {
            position: fixed;
            z-index: -10;
            top: 0; left: 0; right: 0; bottom: 0;
            background-color: rgba(255, 236, 2, 0.85); /* L'opacite se regle ici */
        }

        .LoginBtn
        {
            position: absolute;
            bottom: 80px;
        }

        #logoonmap
        {
            position: absolute;
            bottom: 10px;
            right: 2px;
            z-index: 1;
            transform: scale(0.7, 0.7);
        }


    </style>



<div id="background_opacity"></div>

