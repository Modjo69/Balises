{% extends 'baseMap.html.twig' %}


{% block body %}

    <div id="background_opacity"></div>

<div class="container-fluid h-100">
    <div class="row justify-content-around py-5 my-5">

        <div class="col-12 m-auto" id="IndexTitle">
            <h1 class="text-center">ET SI VOUS RETOURNIEZ AU THÉÂTRE ?</h1>
        </div>
    </div>
    <div class="row justify-content-start endroit-moment">
        <div class="col-5 col-md-4 offset-2   logoIndex">
            <h1>A quel endroit ?</h1>
        </div>
    </div>

    <div class="row justify-content-around">
        <div class="col-5 col-md-2 m-auto logoIndex">
            <a href="{{ path('map2') }}"><img src="{{ asset('uploads/jumelles.png') }}"></a>
        </div>

        <div class="col-5 col-md-2 m-auto logoIndex">

            <a href="{{ path('calendar_home') }}""><img src="{{ asset('uploads/calendarindex.png') }}"></a>

        </div>
    </div>

    <div class="row justify-content-start endroit-moment">
        <div class="col-5 col-md-4 offset-md-8 logoIndex">
            <h1>A quel moment ?</h1>
        </div>
    </div>
    <div class="row justify-content-around">
        <div class="col-4 col-md-1 offset-md-11 pt-4" id="logoonmap">
            <a href="{{ path('home') }}"><img src="http://www.balises-theatres.com/img/Logo_balises_rond.png"/></a>
        </div>
    </div>
        

        <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header text-center">
                <h5 class="modal-title" id="exampleModalLabel">Contactez Balises</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                {{ form_start(email_form) }}
                <div class="row mt-5">
                    <div class="col-1 mb-5"></div>
                    {{ form_widget(email_form.Votre_Nom, {'attr': {'class': 'col-3','placeholder': 'Votre Nom'}}) }}
                    <div class="col-1"></div>
                    {{ form_widget(email_form.Votre_Email, {'attr': {'class': 'col-6','placeholder': 'Votre Email'}}) }}
                </div>
                <div class="row mt-5">
                    <div class="col-1"></div>
                    {{ form_widget(email_form.Votre_Message, {'attr': {'class': 'col-10','placeholder': 'Votre Message', 'rows': 7}}) }}
                </div>


                
              </div>
              <div class="modal-footer">
                <button type="button" class="calendarButton hvr-float-shadow mt-3 mb-3" data-dismiss="modal">Close</button>
                <input type="submit" value="Send" class="calendarButton hvr-float-shadow mt-3 mb-3"/>
                {{ form_end(email_form) }}
              </div>
            </div>
          </div>
        </div>


    </div>

    {{ include('footer.html.twig') }}

    {{ include('navSocial.html.twig') }}
{% endblock %}



{% block javascripts %}

    <script>

        let moveonfooter = document.getElementById('footer');
        let moveonfooter2 = document.getElementById('footer2');
        moveonfooter.addEventListener("mouseover", function()
        {
            moveonfooter2.style.visibility ="visible";
        });
        moveonfooter.addEventListener("mouseout", function()
        {
            moveonfooter2.style.visibility ="hidden";
        });

    </script>
{% endblock %}
